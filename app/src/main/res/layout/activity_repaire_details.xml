<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:hyphenate="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFF2F2F2"
    android:orientation="vertical">
    <com.hyphenate.easeui.widget.EaseTitleBar
        android:id="@+id/detailes_easeTitleBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        hyphenate:titleBarLeftImage="@drawable/title_back"
        hyphenate:titleBarTitle="报修单详情" />
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="15dp"
                android:orientation="vertical"
                android:background="@drawable/bg_repairedetails"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="15dp"
                    android:orientation="horizontal"
                    >
                    <TextView
                        android:id="@+id/tv_repaire_status"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text=""
                        android:gravity="center_horizontal"
                        android:textColor="@color/orange"
                        android:textSize="20sp"
                        />
                    <TextView
                        android:id="@+id/tv_repaire_type"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text=""
                        android:textStyle="bold"
                        android:textColor="@color/black_deep"
                        android:gravity="center_horizontal"
                        android:textSize="20sp"
                        />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:layout_marginLeft="25dp"
                    android:orientation="horizontal"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="报修人："
                        android:textStyle="bold"
                        android:gravity="center_horizontal"
                        android:textColor="@color/black_deep"
                        android:textSize="15sp"
                        />
                    <TextView
                        android:id="@+id/tv_repaire_man"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text=""
                        android:textColor="@color/black_deep"
                        android:gravity="left"
                        android:textSize="15sp"
                        />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="25dp"
                    android:orientation="horizontal"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="报修描述:"
                        android:textStyle="bold"
                        android:gravity="center_horizontal"
                        android:textColor="@color/black_deep"
                        android:textSize="15sp"
                        />
                    <TextView
                        android:id="@+id/tv_repaire_des"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text=""
                        android:textColor="@color/black_deep"
                        android:gravity="left"
                        android:textSize="15sp"
                        />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="25dp"
                    android:orientation="horizontal"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="报修物品："
                        android:textStyle="bold"
                        android:gravity="center_horizontal"
                        android:textColor="@color/black_deep"
                        android:textSize="15sp"
                        />
                    <TextView
                        android:id="@+id/tv_repaire_goods"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text=""
                        android:textColor="@color/black_deep"
                        android:gravity="left"
                        android:textSize="15sp"
                        />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="25dp"
                    android:layout_marginBottom="10dp"
                    android:orientation="horizontal"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="所处地点："
                        android:textStyle="bold"
                        android:gravity="center_horizontal"
                        android:textColor="@color/black_deep"
                        android:textSize="15sp"
                        />
                    <TextView
                        android:id="@+id/tv_repaire_position"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text=""
                        android:textColor="@color/black_deep"
                        android:gravity="left"
                        android:textSize="15sp"
                        />
                </LinearLayout>

            </LinearLayout>
            <LinearLayout
                android:id="@+id/layout_img_des"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="10dp"
                android:orientation="vertical"
                android:background="@drawable/bg_repairedetails"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="15dp"
                    android:orientation="horizontal"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="图片描述："
                        android:gravity="center_horizontal"
                        android:textColor="@color/black_deep"
                        android:textStyle="bold"
                        android:textSize="20sp"
                        />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="25dp"
                    android:orientation="horizontal"
                    >
                    <GridView
                        android:id="@+id/repaire_details_img"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:numColumns="3"
                        android:scrollbars="none"
                        android:layout_marginTop="5dp"
                        />
                </LinearLayout>
            </LinearLayout>



            <LinearLayout
                android:id="@+id/layout_table_status"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="10dp"
                android:orientation="vertical"
                android:background="@drawable/bg_repairedetails"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="15dp"
                    android:orientation="horizontal"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="报修单状态:"
                        android:gravity="center_horizontal"
                        android:textColor="@color/black_deep"
                        android:textStyle="bold"
                        android:textSize="20sp"
                        />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="25dp"
                    android:orientation="horizontal"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="接单人："
                        android:textStyle="bold"
                        android:gravity="center_horizontal"
                        android:textColor="@color/black_deep"
                        android:textSize="15sp"
                        />
                    <TextView
                        android:id="@+id/tv_repair_personnel"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text=""
                        android:textColor="@color/black_deep"
                        android:gravity="left"
                        android:textSize="15sp"
                        />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="25dp"
                    android:orientation="horizontal"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="接单时间："
                        android:textStyle="bold"
                        android:gravity="center_horizontal"
                        android:textColor="@color/black_deep"
                        android:textSize="15sp"
                        />
                    <TextView
                        android:id="@+id/tv_get_tabletime"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text=""
                        android:textColor="@color/black_deep"
                        android:gravity="left"
                        android:textSize="15sp"
                        />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="25dp"
                    android:orientation="horizontal"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="维修完成时间："
                        android:textStyle="bold"
                        android:gravity="center_horizontal"
                        android:textColor="@color/black_deep"
                        android:textSize="15sp"
                        />
                    <TextView
                        android:id="@+id/tv_complete_tabletime"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text=""
                        android:textColor="@color/black_deep"
                        android:gravity="left"
                        android:textSize="15sp"
                        />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="25dp"
                    android:layout_marginBottom="10dp"
                    android:orientation="horizontal"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="维修结果："
                        android:textStyle="bold"
                        android:gravity="center_horizontal"
                        android:textColor="@color/black_deep"
                        android:textSize="15sp"
                        />
                    <TextView
                        android:id="@+id/tv_repaire_final_status"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="维修成功"
                        android:textColor="@color/black_deep"
                        android:gravity="left"
                        android:textSize="15sp"
                        />
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/layout_evaluate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="10dp"
                android:orientation="vertical"
                android:visibility="gone"
                android:background="@drawable/bg_repairedetails"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginBottom="5dp"
                    android:orientation="horizontal"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="评价："
                        android:gravity="center_horizontal"
                        android:textColor="@color/black_deep"
                        android:textStyle="bold"
                        android:textSize="20sp"
                        />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="25dp"
                    android:layout_marginBottom="5dp"
                    android:orientation="horizontal"
                    >
                    <TextView
                        android:id="@+id/tv_repaire_evaluate"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text=""
                        android:textColor="@color/black_deep"
                        android:gravity="left"
                        android:textSize="15sp"
                        />
                </LinearLayout>
            </LinearLayout>
            <Button
                android:id="@+id/btn_confirm"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="10dp"
                android:layout_gravity="bottom"
                android:focusable="true"
                android:clickable="true"
                android:background="@drawable/btn_cofirm_complete_bg"
                android:text="确认完成"
                android:textColor="@drawable/btn_confirm_tv_color"
                android:textSize="20sp"
                />
        </LinearLayout>
    </ScrollView>

</LinearLayout>