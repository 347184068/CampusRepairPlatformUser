<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:hyphenate="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <com.hyphenate.easeui.widget.EaseTitleBar
        android:id="@+id/easeTitleBar1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        hyphenate:titleBarTitle="我要报修"
        hyphenate:titleBarRightImage="@drawable/commit"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginLeft="15dp"
            android:orientation="horizontal"
            >
            <TextView
                android:layout_width="55dp"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:text="报修人"
                android:textColor="@color/black_deep"
                android:textSize="17sp"
                />
            <TextView
                android:id="@+id/tv_repairer_name"
                android:layout_width="80dp"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:ellipsize="end"
                android:singleLine="true"
                android:layout_marginLeft="10dp"
                android:textColor="@color/black_deep"
                android:text="获取失败"
                />
            <TextView
                android:layout_width="80dp"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:layout_marginLeft="10dp"
                android:text="报修类型"
                android:textColor="@color/black_deep"
                android:textSize="17dp"
                />
            <Spinner
                android:id="@+id/repaire_type"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:entries="@array/spinner_repaire_type"
                />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/type_choose_layout"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="15dp"
            android:visibility="gone"
            android:orientation="horizontal"
            >
            <Spinner
                android:id="@+id/teaching_building_id"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                />
            <Spinner
                android:id="@+id/repaire_next_type"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                />

        </LinearLayout>
        <LinearLayout
            android:id="@+id/goods_checkbox_one"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginLeft="15dp"
            android:visibility="gone"
            android:orientation="vertical"
            >
            <LinearLayout
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:orientation="horizontal"
                >
                <CheckBox
                    android:id="@+id/goods1"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="纱窗"
                    />
                <CheckBox
                    android:id="@+id/goods2"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="灯管"
                    />
                <CheckBox
                    android:id="@+id/goods3"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="门锁"
                    />
                <CheckBox
                    android:id="@+id/goods4"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="管道"
                    />
                <CheckBox
                    android:id="@+id/goods5"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="电风扇"
                    />

            </LinearLayout>
            <LinearLayout
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:orientation="horizontal"
                >
                <CheckBox
                    android:id="@+id/goods6"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="冲水阀"
                    />
                <CheckBox
                    android:id="@+id/goods7"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="其他"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="(请在描述中填写)"
                    android:gravity="center"
                    android:textColor="#000"
                    />
            </LinearLayout>

        </LinearLayout>
        <LinearLayout
            android:id="@+id/goods_checkbox_two"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginLeft="15dp"
            android:visibility="gone"
            android:orientation="vertical"
            >
            <LinearLayout
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:orientation="horizontal"
                >
                <CheckBox
                    android:id="@+id/goods8"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="接口检测"
                    />
                <CheckBox
                    android:id="@+id/goods9"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="网线检测"
                    />
                <CheckBox
                    android:id="@+id/goods10"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="路由器检测"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:orientation="horizontal"
                >
                <CheckBox
                    android:id="@+id/goods11"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="其他"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="(请在描述中填写)"
                    android:gravity="center"
                    android:textColor="#000"
                    />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/goods_checkbox_three"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginLeft="15dp"
            android:visibility="gone"
            android:orientation="vertical"
            >
            <LinearLayout
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:orientation="horizontal"
                >
                <CheckBox
                    android:id="@+id/goods12"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="门锁"
                    />
                <CheckBox
                    android:id="@+id/goods13"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="电风扇"
                    />
                <CheckBox
                    android:id="@+id/goods14"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="投影仪"
                    />
                <CheckBox
                    android:id="@+id/goods15"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="黑板"
                    />
                <CheckBox
                    android:id="@+id/goods16"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="灯管"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:orientation="horizontal"
                >
                <CheckBox
                    android:id="@+id/goods17"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="课桌"
                    />
                <CheckBox
                    android:id="@+id/goods18"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="多媒体讲桌"
                    />

                <CheckBox
                    android:id="@+id/goods19"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="其他"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="(请在描述中填写)"
                    android:gravity="center"
                    android:textColor="#000"
                    />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginLeft="15dp"
            android:orientation="horizontal"
            >
            <TextView
                android:layout_width="80dp"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:text="房间号"
                android:textColor="@color/black_deep"
                android:textSize="17dp"
                />
            <EditText
                android:id="@+id/room_number"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="15dp"
                android:gravity="top"
                android:background="@drawable/bg_edittext"
                />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_marginTop="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginLeft="15dp"
            android:orientation="horizontal"
            >
            <TextView
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:text="报修描述"
                android:textSize="17dp"
                android:textColor="@color/black_deep"
                />
            <EditText
                android:id="@+id/repaire_describe"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="15dp"
                android:gravity="top"
                android:background="@drawable/bg_edittext"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="15dp"
            android:layout_marginLeft="15dp"
            android:orientation="horizontal"
            >
            <TextView
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="图片描述"
                android:textColor="@color/black_deep"
                android:textSize="17dp"
                />
            <GridView
                android:id="@+id/repaire_img"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:numColumns="3"
                android:scrollbars="none"
                android:layout_marginTop="15dp"
                />
        </LinearLayout>

    </LinearLayout>
</LinearLayout>