<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="70dp"
    android:minHeight="70dp"
    >
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="5"
        android:orientation="vertical"
        >
        <LinearLayout
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="horizontal"
            >
            <TextView
                android:id="@+id/list_repaire_describe"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:text="哈德门已坏哈哈哈哈哈哈哈哈哈哈哈哈啊哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈"
                android:singleLine="true"
                android:ellipsize="end"
                android:paddingLeft="5dp"
                android:textColor="#000"
                android:textSize="20sp"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="horizontal"
            >
            <TextView
                android:id="@+id/list_repaire_name"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:paddingLeft="5dp"
                android:text="小明"
                android:textColor="@color/gray_drak"
                android:textSize="15sp"
                />
            <TextView
                android:id="@+id/list_repaire_type"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="教学楼物品"
                android:singleLine="true"
                android:ellipsize="end"
                android:textColor="@color/gray_drak"
                android:textSize="15sp"
                />
            <TextView
                android:id="@+id/list_repaire_date"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="2016-08-06"
                android:textColor="@color/gray_drak"
                android:textSize="15sp"
                />
        </LinearLayout>

    </LinearLayout>
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="2"
        android:orientation="vertical"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/list_repaire_status"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="待维修"
                android:textSize="23sp"
                android:layout_marginTop="15dp"
                android:gravity="center"
                />
            <TextView
                android:id="@+id/list_evaluate_status"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/list_repaire_status"
                android:text="未评论"
                android:visibility="gone"
                android:textSize="15sp"
                android:gravity="center"
                />
        </RelativeLayout>

    </LinearLayout>
</LinearLayout>